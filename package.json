{
  "name": "vortexwebbrowser",
  "version": "0.1.29",
  "description": "A fast, lightweight web browser built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --publish=never",
    "build:portable": "electron-builder --win portable --publish=never",
    "build:dir": "electron-builder --win --dir",
    "build:zip": "electron-builder --win zip",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --win --publish=always",
    "draft": "electron-builder --win --publish=onTagOrDraft"
  },
  "keywords": [],
  "author": "H0l10W",
  "license": "ISC",
  "homepage": "https://github.com/H0l10W/web-browser-with-js",
  "repository": {
    "type": "git",
    "url": "https://github.com/H0l10W/Vortex-web-browser.git"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.37.0"
  },
  "build": {
    "appId": "com.h0l10w.vortexwebbrowser",
    "productName": "VortexBrowser",
    "publish": {
      "provider": "github",
      "owner": "H0l10W",
      "repo": "Vortex-web-browser"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/.git/**/*",
      "!dist/**/*",
      "!*.log",
      "!obj/**/*"
    ],
    "compression": "store",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "warningsAsErrors": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/app-icon.png",
      "publisherName": "VortexBrowser",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false,
      "asar": true,
      "asarUnpack": [
        "icons/**/*"
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "VortexBrowser-Portable-${version}.${ext}",
      "unpackDirName": "VortexBrowser"
    },
    "extraResources": [
      {
        "from": "icons/",
        "to": "icons/"
      }
    ]
  }
}
